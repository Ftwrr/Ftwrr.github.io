---
import Layout from "../layouts/Layout.astro";
---

<Layout title="Portfolio">
  <div class="bg-slate-800 flex flex-col justify-center items-center h-full">
    <div
      class="m-2 w-auto border-solid border-4 border-white bg-gray-500 max-w-xs rounded-lg inline-block overflow-hidden"
    >
      <div class="overflow-visible">
        <a href="/">
          <video autoplay loop class="max-w-xs" src="/cover.mp4"></video>
        </a>
      </div>
      <div class="flex justify-center items-center mt-2">
        <audio controls autoplay>
          <source src="/SZA - Nobody Gets Me.mp3" type="audio/mpeg" />
        </audio>
      </div>
      <div class="p-2">
        <div class="text-4xl text-white">Fathunnur Suhas</div>
        <div class="text-purple-200 text-2xl">Pelajar</div>
        <div class="text-gray-200 text-xl">Kelas: XI</div>
        <div class="text-gray-200 text-xl">Jurusan: RPL</div>
      </div>
    </div>
    <br />
    <div class="">
    </div>
  </div>
</Layout>
